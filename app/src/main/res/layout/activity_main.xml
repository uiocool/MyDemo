<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation = "vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="10"
        android:orientation = "vertical">
            <FrameLayout
                android:id="@+id/fl_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.9"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_commend"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/commend_color"
            android:background="@drawable/background_color"
            android:textColor="@drawable/text_color"
            android:text="推荐"/>
        <TextView
            android:id="@+id/txt_plate"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/plate_color"
            android:background="@drawable/background_color"
            android:textColor="@drawable/text_color"
            android:text="板块"/>
        <TextView
            android:id="@+id/txt_nearby"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/nearby_color"
            android:background="@drawable/background_color"
            android:textColor="@drawable/text_color"
            android:text="附近"/>
        <TextView
            android:id="@+id/txt_mine"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/mine_color"
            android:background="@drawable/background_color"
            android:textColor="@drawable/text_color"
            android:text="我的"/>


    </LinearLayout>

</LinearLayout>